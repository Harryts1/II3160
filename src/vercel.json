{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/dashboard",
      "dest": "main.py"
    },
    {
      "src": "/callback",
      "dest": "main.py"
    },
    {
      "src": "/login",
      "dest": "main.py"
    },
    {
      "src": "/update-profile",
      "dest": "main.py"
    },
    {
      "src": "/complete-profile",
      "dest": "main.py"
    },
    {
      "src": "/logout",
      "dest": "main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "env": {
    "PYTHONPATH": ".",
    "APP_MODULE": "main:app",
    "AUTH0_CLIENT_ID": "@auth0_client_id",
    "AUTH0_CLIENT_SECRET": "@auth0_client_secret", 
    "AUTH0_DOMAIN": "@auth0_domain",
    "AUTH0_CALLBACK_URL": "@auth0_callback_url",
    "AUTH0_AUDIENCE": "@auth0_audience",
    "MONGO_URL": "@mongo_url",
    "SECRET_KEY": "@secret_key"
  }
 }